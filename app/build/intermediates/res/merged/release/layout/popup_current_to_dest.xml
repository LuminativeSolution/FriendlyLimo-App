<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b70808"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#fff" />

        <TextView
            android:id="@+id/tvTaxisAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/taxis_available"
            android:textColor="#fff"
            android:textSize="20sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="#fff" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvCurrent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/taxi"
        android:drawableStart="@drawable/taxi"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tvDest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" />

</LinearLayout><!-- From: file:/E:/Muzamil/Development%20Folder/Android/workspace/GIT%20Out/app/src/main/res/layout/popup_current_to_dest.xml -->