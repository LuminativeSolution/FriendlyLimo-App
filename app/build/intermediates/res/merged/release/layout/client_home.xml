<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlWrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.client.home.ClientHome" >

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#2f6172" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/client_current_loc"
            android:textColor="#fff" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/E:/Muzamil/Development%20Folder/Android/workspace/GIT%20Out/app/src/main/res/layout/client_home.xml -->